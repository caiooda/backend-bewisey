{
  "compilerOptions": {
    "target": "ES2018",                                  
    "module": "commonjs",
    "typeRoots": [
      "./node_modules/@types",
    ],       
    "removeComments": true,
    "esModuleInterop": true,         
    "strictPropertyInitialization": false,                    
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                     
    "skipLibCheck": true,  
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,                     
  }
}
